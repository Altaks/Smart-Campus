{% extends 'base.html.twig' %}

{% block title %}Demande travaux : Salle {{ salle.nom }}{% endblock %}

{% block body %}

    <div class="relative overflow-x-auto lg:max-w-7xl mx-auto">
        <h1 class="lg:text-4xl text-6xl py-12 text-center">Salle {{ salle.nom }}</h1>
        <div class="flex flex-row justify-between max-w-screen-xl mx-auto">
            <div class="ml-6">
                {{ form_start(formSystemeAcqui) }}
                    <label class="mb-2">{{ field_label(formSystemeAcqui.sa) }}</label>
                    <select id="option" name="{{ field_name(formSystemeAcqui.sa) }}" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" onchange='this.form.submit()'>

                        {% for label, value in field_choices(formSystemeAcqui.sa) %}
                         <option value="{{ value }}">{{ label }}</option>
                        {% endfor %}
                </select>
                {{ form_end(formSystemeAcqui) }}
            </div>
            <div class="mr-6">
                {% if listeReleves is not null and not demandeTravaux.Terminee %}
                    <button
                        type="button"
                        class="font-bold ml-auto text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mt-7 focus:outline-none"
                        onclick="window.location.href='/plan/{{ demandeTravaux.getId }}/declarer-operationnel'"
                    >
                        Déclarer opérationnel
                    </button>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="max-w-screen-xl w-5/6 mx-auto">
        <h2 class="mt-12 mb-4 text-3xl">Relevés</h2>
        {% if listeReleves is not null %}
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr >
                        <th scope="col" class="px-6 py-3">
                            Date
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Heure
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Temp (°C)
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Co2 (ppm)
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Hum (%)
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for date, releveInfos in listeReleves %}
                        <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                {{ date | format_datetime('full', 'none', locale='fr') | title }}
                            </th>
                            <td class="px-6 py-4">
                                {{ date | format_datetime('none', 'short', locale='fr') }}
                            </td>
                            <td class="px-6 py-4">
                                {{ releveInfos.temp | default("-") }}
                            </td>
                            <td class="px-6 py-4">
                                {{ releveInfos.co2 | default("-") }}
                            </td>
                            <td class="px-6 py-4">
                                {{ releveInfos.hum | default("-") }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-lg italic text-gray-700">Pas de relevé</p>
        {% endif %}
    </div>

{% endblock %}
