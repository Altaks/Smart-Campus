{% extends 'base.html.twig' %}

{% block title %}Modifier la salle {{ salle.nom }}{% endblock %}

{% set orientation  = {
    "No" : "Nord",
    "Su" : "Sud",
    "Es" : "Est",
    "Ou" : "Ouest",
    "NE" : "Nord-Est",
    "NO" : "Nord-Ouest",
    "SE" : "Sud-Est",
    "SO" : "Sud-Ouest",
} %}

{% block body %}


    <div class="relative overflow-x-auto lg:max-w-7xl mx-auto mt-2">
        <h1 class="lg:text-4xl text-6xl py-12 text-center mb-10">Modifier la salle {{ salle.nom }}</h1>
        {{ form_start(formSalle) }}
        <div class="m-auto grid grid-cols-3 text-center">

            <div class="mb-5 mx-5">
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nom de la salle</label>
                <p class="text-gray-900 text-sm block w-full py-2.5 dark:placeholder-gray-400 dark:text-white">{{ salle.nom }}</p>
            </div>
            <div class="mb-5 mx-5">
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nom du b√¢timent</label>
                <p class="text-gray-900 text-sm block w-full py-2.5 dark:placeholder-gray-400 dark:text-white">{{ salle.batiment }}</p>
            </div>
            <div class="mb-5 mx-5">
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Orientation</label>
                <p class="text-gray-900 text-sm block w-full py-2.5 dark:placeholder-gray-400 dark:text-white">{{ orientation[salle.orientation] }}</p>
            </div>
            <div class="mb-5 mx-5">
                <label for="fenetre-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">{{ field_label(formSalle.nombreFenetre) }}</label>
                <div class="relative flex items-center max-w-[8rem] mx-auto">
                    <button type="button" id="decrement-button" data-input-counter-decrement="fenetre-input" class="bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-gray-600 hover:bg-gray-200 border border-gray-300 rounded-s-lg p-3 h-11 focus:ring-gray-100 dark:focus:ring-gray-700 focus:ring-2 focus:outline-none">
                        <svg class="w-3 h-3 text-gray-900 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 2">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h16"/>
                        </svg>
                    </button>
                    <input type="text" id="fenetre-input" name="{{ field_name(formSalle.nombreFenetre) }}" data-input-counter data-input-counter-min="0" aria-describedby="helper-text-explanation" class="bg-gray-50 border-x-0 border-gray-300 h-11 text-center text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="0" value="{{ salle.nombreFenetre }}" required>
                    <button type="button" id="increment-button" data-input-counter-increment="fenetre-input" class="bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-gray-600 hover:bg-gray-200 border border-gray-300 rounded-e-lg p-3 h-11 focus:ring-gray-100 dark:focus:ring-gray-700 focus:ring-2 focus:outline-none">
                        <svg class="w-3 h-3 text-gray-900 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="mb-5 mx-5">
                <label for="porte-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">{{ field_label(formSalle.nombrePorte) }}</label>
                <div class="relative flex items-center max-w-[8rem] mx-auto">
                    <button type="button" id="decrement-button" data-input-counter-decrement="porte-input" class="bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-gray-600 hover:bg-gray-200 border border-gray-300 rounded-s-lg p-3 h-11 focus:ring-gray-100 dark:focus:ring-gray-700 focus:ring-2 focus:outline-none">
                        <svg class="w-3 h-3 text-gray-900 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 2">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h16"/>
                        </svg>
                    </button>
                    <input type="text" id="porte-input" name="{{ field_name(formSalle.nombrePorte) }}" data-input-counter data-input-counter-min="1" aria-describedby="helper-text-explanation" class="bg-gray-50 border-x-0 border-gray-300 h-11 text-center text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="1" value="{{ salle.nombrePorte }}" required>
                    <button type="button" id="increment-button" data-input-counter-increment="porte-input" class="bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-gray-600 hover:bg-gray-200 border border-gray-300 rounded-e-lg p-3 h-11 focus:ring-gray-100 dark:focus:ring-gray-700 focus:ring-2 focus:outline-none">
                        <svg class="w-3 h-3 text-gray-900 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="mb-5 mx-5 mx-auto">
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">{{ field_label(formSalle.contientPc) }}</label>
                <div class="flex flex-row">
                    {% for contientPc, value in field_choices(formSalle.contientPc) %}
                        <div class="flex justify-center">
                            <input id="inline-radio" type="radio" value="{{ value }}" name="{{ field_name(formSalle.contientPc) }}" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                {% if salle.contientPc == 1 and contientPc == 'Oui' %}
                                    checked
                                {% elseif salle.contientPc == 0 and contientPc == 'Non'%}
                                    checked
                                {% endif %}
                            >
                            <label for="inline-radio" class="ms-2 {{ (contientPc == 'Oui' ) ? 'me-4' : '' }} text-sm font-medium text-gray-900 dark:text-gray-300">{{ contientPc }}</label>
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(formSalle.contientPc, {
                    error_item_class: 'text-red-600 text-sm mt-1',
                }) }}
            </div>
            <div class="grid grid-cols-subgrid gap-4 col-span-3 mt-5">
                <div class="mx-auto col-start-1">
                    <button id="submit" type="submit" name="{{ field_name(formSalle.modifier) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                        {{ field_label(formSalle.modifier) }}</button>
                </div>
            </div>
        </div>
        {{ form_end(formSalle) }}
    </div>

{% endblock %}