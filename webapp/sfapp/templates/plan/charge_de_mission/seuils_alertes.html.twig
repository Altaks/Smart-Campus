    <script>
        let temp_min = document.getElementById('temp_min');
        let temp_max = document.getElementById('temp_max');
        let humidite_max = document.getElementById('humidite_max');
        let co2_premier_palier = document.getElementById('co2_premier_palier');
        let co2_second_palier = document.getElementById('co2_second_palier');
        let decrements = document.querySelectorAll("[id='decrement-button']");
        let increments = document.querySelectorAll("[id='increment-button']");
        temp_min.addEventListener('input',verifierEntrees)
        temp_max.addEventListener('input',verifierEntrees)
        humidite_max.addEventListener('input',verifierEntrees)
        co2_premier_palier.addEventListener('input',verifierEntrees)
        co2_second_palier.addEventListener('input',verifierEntrees)
        for(const decrement of decrements) decrement.addEventListener('click',attendreVerifierEntrees)
        for(const increment of increments) increment.addEventListener('click',attendreVerifierEntrees)

        function attendreVerifierEntrees() {
            setTimeout(function(){verifierEntrees()}, 100)
        }

        function verifierEntrees(){
            let temp_min = document.getElementById('temp_min');
            let temp_max = document.getElementById('temp_max');
            let humidite_max = document.getElementById('humidite_max');
            let co2_premier_palier = document.getElementById('co2_premier_palier');
            let co2_second_palier = document.getElementById('co2_second_palier');

            if(temp_min.value.length > 0 && temp_max.value.length > 0 && humidite_max.value.length > 0 && co2_premier_palier.value.length > 0 && co2_second_palier.value.length > 0) enableSubmitButton()
            else disableSubmitButton()
        }

        function enableSubmitButton(){
            let button = document.getElementById("submit");
            if (button.disabled){
                button.disabled = false;
                button.classList.remove("cursor-not-allowed");
                button.classList.add("hover:bg-blue-800");
            }
        }
        function disableSubmitButton(){
            let button = document.getElementById("submit");
            if (!button.disabled){
                button.disabled = true;
                button.classList.add("cursor-not-allowed");
                button.classList.remove("hover:bg-blue-800");
            }
        }
    </script>

