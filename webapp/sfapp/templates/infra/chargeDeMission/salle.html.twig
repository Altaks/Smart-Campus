{% extends 'base.html.twig' %}

{% block title %}Smart Campus : Liste des salles{% endblock %}

{% set orientation  = {
    "No" : "Nord",
    "Su" : "Sud",
    "Es" : "Est",
    "Ou" : "Ouest",
    "NE" : "Nord-Est",
    "NO" : "Nord-Ouest",
    "SE" : "Sud-Est",
    "SO" : "Sud-Ouest",
}
%}



{% block body %}

    <nav class="bg-white dark:bg-gray-900 w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-content mx-auto p-4">
            <img src="/images/logo-univ.webp" class="h-16" alt="Logo Université de la Rochelle">
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Smart Campus</span>
        </div>
        <a href="/infra/charge-de-mission/">Infrastructure</a>
        <a href="/releves">Relevés</a>
    </nav>
    <h1>Liste des salles accesssibles :</h1>
    <div class="max-w-screen-xl w-5/6 mx-auto">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Bâtiment
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nom de la salle
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Etage
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Orientation
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nombre de porte
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nombre de fenêtre
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Contient des PC
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Système d'exploitation
                    </th>
                </tr>
                </thead>
                <tbody>

                {% for salle in listeSalles | sort((a, b) => a.batiment.nom <=> b.batiment.nom ) | sort((a, b) => a.numero <=> b.numero ) %}

                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ salle.batiment.nom }}
                        </th>

                        <td class="px-6 py-4">
                            {{ salle.nom }}
                        </td>
                        <td class="px-6 py-4">
                            {% if salle.etage == 0 %}
                                Rdc
                            {% elseif salle.etage == 1 %}
                                1er
                            {% else %}
                                {{ salle.etage }}eme
                            {% endif %}
                        </td>


                        <td class="px-6 py-4">
                            {{ orientation[salle.orientation] }}
                        </td>

                        <td class="px-6 py-4">
                            {{ salle.nombrePorte }}
                        </td>

                        <td class="px-6 py-4">
                            {{ salle.nombrFenetre }}
                        </td>

                        <td class="px-6 py-4">
                            {{ salle.contientpc ?? true ? 'Oui' : 'Non' }}
                        </td>

                        <td class="px-6 py-4">
                            {% if salle.systemeAcquisiton is null %}
                                -
                            {% else %}
                                {{ salle.systemeAquisition.tag }}
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

    </div>
{% endblock %}