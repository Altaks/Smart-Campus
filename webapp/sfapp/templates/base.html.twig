<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="/images/logo-univ.webp">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.css" rel="stylesheet" />

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
        <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    </head>
    <body>

    <nav class="bg-white dark:bg-gray-900 w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600">
        <div class="flex flex-row justify-between">
                <a href="/accueil" class="flex flex-wrap items-center justify-content mx-auto p-4">
                    <img src="/images/logo-univ.webp" class="h-16" alt="Logo Université de la Rochelle">
                    <span class="ml-8 self-center lg:text-2xl text-4xl font-semibold whitespace-nowrap dark:text-white">Smart Campus</span>
                </a>
            <div class="max-w-screen-xl flex flex-wrap items-center justify-content mx-auto p-4">
                {% if app.user %}

                    <a href="/deconnexion" class="lg:text-md text-2xl mx-5 flex flex-row justify-center items-center gap-2 hover:underline"><box-icon class="lg:w-auto lg:h-auto lg:mt-3.5 w-8 h-8 mb-1" name='exit'></box-icon> Déconnexion</a>

                {% endif %}
                {% if nav_links is defined %}
                    {% for link, label in nav_links %}
                        <a href="{{ link }}" class="mx-5 flex flex-row justify-center items-center gap-2 hover:underline">{{ label | raw }}</a>
                    {% endfor %}
                {% endif %}



            </div>
        </div>
    </nav>
    {% block body %}{% endblock %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.js"></script>
    </body>
</html>
